<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.ddns.andrewnetwork.ludothornsoundbox">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>
    <application
        android:name=".MvpApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_action_launcher_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_action_launcher_1_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3889032681139142~8858308706" />

        <activity
            android:name=".ui.main.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.web.WebActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/action_settings"
            android:theme="@style/PreferenceActivityTheme" />

        <activity
            android:name=".ui.settings.activity.SettingsIconActivity"
            android:label="@string/action_icon_preferences"
            android:theme="@style/PreferenceActivityTheme" />

        <activity-alias
            android:name=".MainActivity1"
            android:enabled="true"
            android:icon="@mipmap/ic_action_launcher_1"
            android:label="@string/app_name"
            android:targetActivity=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity-alias android:label="@string/app_name"
            android:icon="@mipmap/ic_action_launcher_2"
            android:name=".MainActivity2"
            android:enabled="false"
            android:targetActivity=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity-alias android:label="@string/app_name"
            android:icon="@mipmap/ic_action_launcher_3"
            android:name=".MainActivity3"
            android:enabled="false"
            android:targetActivity=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
    </application>

</manifest>