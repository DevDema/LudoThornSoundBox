<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_credits"
    android:tileMode="repeat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tipeee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/knewave"
                android:gravity="center"
                android:text="@string/Tipee"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:contentDescription="@string/logo"
                android:paddingBottom="40dp"
                android:paddingEnd="40dp"
                android:paddingStart="40dp"
                android:paddingTop="40dp"
                android:scaleType="center"
                app:srcCompat="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="60dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/telegramimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:contentDescription="@string/telegramlogo"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="20dp"
                    android:scaleType="fitCenter"
                    android:scaleX="2"
                    android:scaleY="2"
                    app:srcCompat="@drawable/ic_action_telegram" />

                <ImageView
                    android:id="@+id/facebookimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:contentDescription="@string/facebooklogo"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="20dp"
                    android:scaleType="fitCenter"
                    android:scaleX="2"
                    android:scaleY="2"
                    app:srcCompat="@drawable/ic_action_facebook" />

                <ImageView
                    android:id="@+id/instagramimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:contentDescription="@string/instagramlogo"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="20dp"
                    android:scaleType="fitCenter"
                    android:scaleX="2"
                    android:scaleY="2"
                    app:srcCompat="@drawable/ic_action_instagram" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="-55dp"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/telegramtext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/knewave"
                    android:paddingTop="10dp"
                    android:text="@string/instagramludo"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="10"
                    android:shadowDy="2"
                    android:shadowRadius="16"/>

                <TextView
                    android:id="@+id/facebooktext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/knewave"
                    android:paddingTop="10dp"
                    android:text="@string/facebookludo"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="10"
                    android:shadowDy="2"
                    android:shadowRadius="16"/>

                <TextView
                    android:id="@+id/instagramtext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/knewave"
                    android:paddingTop="15dp"
                    android:text="@string/telegramludo"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="10"
                    android:shadowDy="2"
                    android:shadowRadius="16"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/knewave"
                android:text="@string/AppText"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="10"
                android:shadowDy="2"
                android:shadowRadius="16"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/knewave"
                    android:gravity="center_vertical"
                    android:text="@string/author"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="10"
                    android:shadowDy="2"
                    android:shadowRadius="16"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/knewave"
                        android:text="@string/emailtext"
                        android:textAlignment="center"
                        android:textColor="#01f1e9"
                        android:textSize="18sp"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="10"
                        android:shadowDy="2"
                        android:shadowRadius="16"/>

                    <TextView
                        android:id="@+id/youtube"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/knewave"
                        android:text="@string/youtubetext"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="18sp"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="10"
                        android:shadowDy="2"
                        android:shadowRadius="16"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/knewave"
                android:text="@string/DesignText"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="10"
                android:shadowDy="2"
                android:shadowRadius="16"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="120dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/designer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/knewave"
                    android:gravity="center_vertical"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="10"
                    android:shadowDy="2"
                    android:shadowRadius="16"
                    android:text="@string/designer"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/twitter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/knewave"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="10"
                        android:shadowDy="2"
                        android:shadowRadius="16"
                        android:text="@string/twittertext"
                        android:textAlignment="center"
                        android:textColor="#01f1e9"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/instagram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/knewave"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="10"
                        android:shadowDy="2"
                        android:shadowRadius="16"
                        android:text="@string/instagramtext"
                        android:textAlignment="center"
                        android:textColor="#01f1e9"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>