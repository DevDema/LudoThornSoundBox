<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="10dp"
    android:background="@drawable/block_color_dark"

    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/page_icon"
        android:layout_width="@dimen/input_size_xxs"
        android:layout_height="@dimen/input_size_xxs"
        android:contentDescription="@string/facebook_icone" />

    <TextView
        android:id="@+id/page_title"
        android:layout_width="@dimen/input_size_m"
        android:layout_height="@dimen/input_size_xxs"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="24sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_toEndOf="@id/page_icon"/>
</RelativeLayout>