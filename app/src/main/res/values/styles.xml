<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemTheme</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="PreferenceActivityTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="alertDialogTheme">@style/PreferenceActivityTheme.DialogTheme</item>
        <item name="android:textColorLink">@color/white</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.PopupOverlay">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>

        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="PreferenceActivityTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppFont">
        <item name="android:fontFamily">@font/knewave</item>
    </style>
    <style name="DefaultFont">
        <item name="android:fontFamily">roboto</item>
    </style>
    <style name="Button" parent="android:Widget.Button">
        <item name="android:textColor">@drawable/button_white_text</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_white</item>
    </style>
    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SpinnerItemTheme">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>

    </style>
</resources>
